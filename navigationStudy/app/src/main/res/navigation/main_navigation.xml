<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_navigation"
  app:startDestination="@id/introFragment">

  <fragment
    android:id="@+id/introFragment"
    android:name="com.example.navigationStudy.scene.IntroFragment"
    android:label="IntroFragment"
    tools:layout="@layout/intro_fragment" >
    <action
      android:id="@+id/action_introFragment_to_mainFragment"
      app:destination="@id/mainFragment" />
  </fragment>

  <fragment
    android:id="@+id/mainFragment"
    android:name="com.example.navigationStudy.scene.MainFragment"
    android:label="MainFragment"
    tools:layout="@layout/main_fragment" />
</navigation>